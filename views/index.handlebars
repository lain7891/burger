<h1 style="font-size: 75px;">BURGER!</h1>

<img class="image" src="./assets/img/burger.jpg" alt="Burger" style="width: 350px", "height: 300px"/>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
<ul style="font-size: 20px; text-align: left;">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
        </div>
         <div class="col-sm-6">
<ul style="font-size: 20px; text-align: left;">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
         </div>
    </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca" style="font-size: 25px;">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit" style="font-size: 25px;">Add Burger</button>
</form>

