<h1 id="title">BURGER!</h1>

<img class="image" src="./assets/img/burger.jpg" alt="Burger" style="width: 400px", "height: 400px"/>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
        </div>
         <div class="col-sm-6">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
         </div>
    </div>
</div>


{{!-- <h2>Burgers Devoured!</h2> --}}



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

